

.header-wrapper {
	width: 100%;
	height: 65px;
	padding-bottom: 5px;
	background: pink;
	display: flex;
	align-items: center;
  font-size: 16px;
  position: fixed;
  top: 0;
  z-index: 999;
}

.image {
  width: 25px;
  height: 25px;
  margin-left: 15rpx;
  margin-right: 20rpx;
}

.position {
  margin-top: 70rpx;
}
.content {
  position: relative;
  top: 70px;
}

.search-wrapper {
  width: 100%;
  height: 40px;
  background-color: white;
  border-bottom: 1px solid #F5F5F5;
  display: flex;
  align-items: center;
}

.input {
  width: 85%;
  height: 25px;
  background-color: #F5F5F5;
  border-radius: 10px;
  margin-left: 15rpx;
  padding-left: 30rpx;
  margin-right: 15rpx;
  font-size: 12px;
}

.placeholder {
  font-size: 12px;
}

.img {
  width: 20px;
  height: 20px;
}

.hot-search {
  width: 100%;
  min-height: 180rpx;
  font-size: 14px;
  margin-top: 20rpx;
}

.hot-text {
  margin-left: 15rpx;
}
.hot-label {
  width: 100%;
  height: 100rpx;
}

.footer {
  margin-top: 20rpx;
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.footer-btn {
  width: 80%;
  height: 100%;
  border: 1px solid black;
  font-size: 12px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.footer-image {
  width: 15px;
  height: 15px;
  margin-right: 10rpx;
}