.container {
  position: relative;
  top: 70px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
	margin-top: -80px;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.user-goods{
  margin-top: 20px;
  padding-left: 15px;
  width: 100%;
  height: 35px;
  background: white;
  font-size: 14px;
  border-bottom: 1px solid #F5F5F5;
  display: flex;
  align-items: center;
}

.btn-wrapper {
  width: 100%;
  height: 55px;
  background-color: white;
  display: flex;
  font-size: 12px;
}

.item {
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.img {
  width: 20px;
  height: 20px;
}

.img2 {
  width: 25px;
  height: 25px;
}

.img-text2 {
  margin-top: 2px;
}

.img-text {
  margin-top: 7px;
}

.label-wrapper {
  margin-top: 10px;
  width: 100%;
}

.row {
  display: flex;
  width: 100%;
  height: 35px;
  border-bottom: 1px solid #F5F5F5;
  background-color: white;
}

.label-img {
  flex: 0 0 10%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.label-image {
  width: 15px;
  height: 15px;
}


.label-text {
  flex: 0 0 70%;
  height: 100%;
  display: flex;
  align-items: center;
  font-size: 12px;
}

.img-btn {
  width: 18px;
  height: 18px;
  margin-right: 10rpx;
}

.label-btn {
  flex: 0 0 20%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

