@import '../../assets/iconfont.wxss';

.search-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 40px;
}

.search {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 85%;
  height: 25px;
  background-color: white;
  border: 1px solid white;
  border-radius: 10px;
  box-shadow: 0 2px 3px gray;
  text-align: center; 
  font-size: 12px;
}
.slide-image {
  width: 100%;
  height: 100%;
}

.swiper {
  margin-top: 20rpx;
}

.btn-wrapper {
  width: 100%;
  height: 160rpx;
  display: flex;
  font-size: 12px;
  background-color: white;
}

.btn-item {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column; 
}


.icon-width{
  font-size: 30px;
}